@page "{id:int}"
@model AutoArsenal_App.Pages.Sales.ViewSaleModel
@{
    ViewData["Title"] = "View Sale";
}
<!-- Page Title -->
<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                <a asp-page="../Index">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <a asp-page="./Sales">Sales</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>
<!-- End Page Title -->
<!-- Error message -->
@if (TempData["ErrorOnServer"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        Error: @TempData["ErrorOnServer"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<!-- End Error message -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h5 class="card-title">
                        @ViewData["Title"]
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <!-- Sale Id -->
                            <div class="form-floating mt-2">
                                <input type="text"
                                       class="form-control"
                                       id="saleId"
                                       placeholder="Sale ID"
                                       value="@Model.SaleID"
                                       disabled />
                                <label for="saleId">Sale ID</label>
                            </div>
                        </div>
                        <div class="col">
                            <!-- Customer Name -->
                            <div class="form-floating mt-2">
                                <input type="text"
                                       class="form-control"
                                       id="customerName"
                                       placeholder="Customer Name"
                                       value="@Model.CustomerName"
                                       disabled />
                                <label for="customerName">Customer Name</label>
                            </div>
                        </div>
                        <div class="col">
                            <!-- Sale Amount -->
                            <div class="form-floating mt-2">
                                <input class="form-control"
                                       id="totalAmount"
                                       placeholder="Total Amount"
                                       disabled />
                                <label for="totalAmount">Total Amount</label>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col">
                            <div class="table-responsive">
                                <table id="salesTable"
                                       class="table table-hover table-striped table-bordered text-center">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Product Name</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        @if (Model.SaleDetails != null)
                                        {
                                            int count = 1;
                                            foreach (var saleDetail in Model.SaleDetails)
                                            {
                                                if (Model.SaleID == saleDetail.SaleID)
                                                {
                                                    Models.ProductCategory productCategory = Model.ProductCategories.Find(p => p.ID == saleDetail.ProductCategoryID);
                                                    Models.Product product = Model.Products.Find(p => p.ID == productCategory.ProductId);
                                                    string category = Model.Lookups.Find(l => l.ID == productCategory.Category).Value;
                                                    <tr>
                                                        <td>@(count++)</td>
                                                        <td>@product.ProductName</td>
                                                        <td>@category</td>
                                                        <td>@saleDetail.Quantity</td>
                                                        <td>@(saleDetail.Quantity * productCategory.SalePrice)</td>
                                                    </tr>
                                                    Model.Total += (saleDetail.Quantity * productCategory.SalePrice);
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                                <script>
                                    document.getElementById("totalAmount").value = "@Model.Total";
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#salesTable').DataTable({
                paging: true,
                lengthChange: false,
                searching: false,
                ordering: true,
                info: true,
                autoWidth: false,
                language: {
                    emptyTable: "No data available",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    infoEmpty: "Showing 0 to 0 of 0 entries",
                    infoFiltered: "(filtered from _MAX_ total entries)",
                    zeroRecords: "No matching records found",
                    search: "Search:",
                }
            });
        });
    </script>
}
