                                <label for="Contact">Contact</label>
                                <p class="invalid" id="contactError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Gender -->
                            <div class="form-floating mt-2">
                                <select class="form-select" id="Gender" aria-label="Default select example" asp-for="Person.Gender">
                                    <option value="-1" selected>Select Gender</option>
                                    <option value="1">Male</option>
                                    <option value="2">Female</option>
                                </select>
                                <label for="Gender">Gender</label>
                                <p class="invalid" id="genderError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Joining Date -->
                            <div class="form-floating mt-2">
                                <input type="date" class="form-control" id="JoiningDate" placeholder="Joining Date" asp-for="Employee.JoiningDate" />
                                <label for="JoiningDate">Joining Date</label>
                                <p class="invalid" id="joiningDateError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Address -->
                            <div class="form-floating mt-2">
                                <input type="text" class="form-control" id="Address" placeholder="Address" asp-for="Person.StreetAddress" />
                                <label for="Address">Address</label>
                                <p class="invalid" id="addressError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- City -->
                            <div class="form-floating mt-2">
                                <select class="form-select" id="City" aria-label="Default select example" asp-for="Person.City">
                                    <option value="-1" selected>Select City</option>
                                    @foreach (var city in Model.Cities)
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <label for="City">City</label>
                                <p class="invalid" id="cityError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Province -->
                            <div class="form-floating mt-2">
                                <select class="form-select" id="Province" aria-label="Default select example" asp-for="Person.Province">
                                    <option value="-1" selected>Select Province</option>
                                    @foreach (var province in Model.Provinces)
                                    {
                                        <option value="@province">@province</option>
                                    }
                                </select>
                                <label for="Province">Province</label>
                                <p class="invalid" id="provinceError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Country -->
                            <div class="form-floating mt-2">
                                <select class="form-select" id="Country" aria-label="Default select example" asp-for="Person.Country">
                                    <option value="-1" selected>Select Country</option>
                                    <option value="Pakistan">Pakistan</option>
                                </select>
                                <label for="Country">Country</label>
                                <p class="invalid" id="countryError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Salary -->
                            <div class="form-floating mt-2">
                                <input type="number" class="form-control" id="Salary" placeholder="Salary" min="0" oninput="validity.valid||(value='');" asp-for="Employee.Salary" />
                                <label for="Salary">Salary</label>
                                <p class="invalid" id="salaryError"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Role -->
                            <div class="form-floating mt-2">
                                <select class="form-select" id="Role" aria-label="Default select example" asp-for="Employee.Role">
                                    <option value="-1" selected>Select Role</option>
                                    @if (Model.Lookups != null)
                                    {
                                        foreach (var lookup in Model.Lookups)
                                        {
                                            if (lookup.Category == "Employee_Type")
                                            {
                                                <option value="@lookup.ID">@lookup.Value</option>
                                            }
                                        }
                                    }
                                </select>
                                <label for="Role">Role</label>
                                <p class="invalid" id="roleError"></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="addBtn" disabled>Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Add Employee Modal -->
